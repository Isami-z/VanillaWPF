<UserControl x:Class="VanillaWPF.Controls.FileInputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VanillaWPF.Controls"
             mc:Ignorable="d"
             x:Name="root">
    <DockPanel >
        <Button x:Name="theButton"
                DockPanel.Dock="Right"
                Content="Browse..."
                Click="theButton_Click"/>
        <TextBox x:Name="theTextBox" MinWidth="{Binding ElementName=theButton, Path=ActualWidth}"
                 Margin="0,0,2,0"
                 Text="{Binding FileName, ElementName=root}"
                 TextChanged="theTextBox_TextChanged"/>
    </DockPanel>
</UserControl>
